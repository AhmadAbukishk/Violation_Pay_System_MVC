@model Traffic_Violation.Models.ProjectTestimonial
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row d-flex justify-content-center pt-5 ">
    <div class="text-center">
        
    </div>  
     <hr />
    <div class="col-md-6 card p-4 text-center">
        <h3>Are you sure you want to reject it?</h3>
        <form asp-action="RejectTestimonial" class="mt-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Content" type="hidden" row="3" class="form-control" />
            <input asp-for="Testimonialid" type="hidden"/>
            <input asp-for="Userid"  type="hidden"/>
            <input asp-for="Stateid" type="hidden"/>
            <input asp-for="Dateadded" type="hidden"/>
           
            <div class="form-group d-flex justify-content-center mt-5">
                <input type="submit" value="Jeject" class="btn btn-primary btn-lg" />
                <a class="btn btn-danger btn-lg ms-3" asp-action="TestimonialManagement">Back</a>
            </div>
        </form>

        @Html.ValidationSummary()
    </div>
</div>





