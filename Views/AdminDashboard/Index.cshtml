@model Tuple<ProjectUser, IEnumerable<LocationCount>, IEnumerable<TestimonialJserJoin>>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
              <div class="row">
                <div class="col-lg-8 mb-4 order-0">
                 <div class="card">
                    <div class="d-flex align-items-end row">
                      <div class="col-sm-9">
                        <div class="card-body">
                          <h2 class="card-title text-primary">Hey @Model.Item1.Fname, Welcome Back </h2>
                          <div class="row">
                              <div class="col-4">
                                <p><span class="text-primary fw-bold me-1">Name:</span> @Model.Item1.Fname @Model.Item1.Lname</p>
                              </div>
                              <div class="col-4 ">
                                <p><span class="text-primary fw-bold me-1">Address:</span> @Model.Item1.Address</p>
                              </div>
                              <div class="col-4">
                                <p><span class="text-primary fw-bold me-1">Birth Year:</span> @ViewBag.BirthYear</p>
                              </div>
                              
                          </div>
                          <div class="row">
                              <div class="col-4">
                                <p><span class="text-primary fw-bold me-1">Age:</span> @ViewBag.Age</p>
                              </div>
                              <div class="col-8">
                                <p><span class="text-primary fw-bold me-1">Email:</span> @Model.Item1.Email</p>
                              </div>
                          </div>
                          
                          <a asp-action="Profile" class="btn btn btn-primary mt-2">Edit Profile</a>

                        </div>
                      </div>
                      <div class="col-sm-3 text-center text-sm-left pb-5">
                        <div class="card-body pb-0 px-0 px-md-4">
                          <img
                            src=@Url.Content("~/imgs/userimgs/" + Model.Item1.Imgpath)
                            height="100"
                            width="100"
                            alt="View Badge User"
                            class="rounded-circle"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-4 col-md-4 order-1">
                  <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                      <div class="card">
                        <div class="card-body">
                          <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                              <img
                                src="~/DashboardAssets/assets/img/icons/unicons/chart-success.png"
                                alt="Credit Card"
                                class="rounded"
                              />
                            </div>
                            <div class="dropdown">
                              <button
                                class="btn p-0"
                                type="button"
                                id="cardOpt3"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                              >
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                <a class="dropdown-item" href="javascript:void(0);">View More</a>
                              </div>
                            </div>
                          </div>
                          <span class="fw-semibold d-block mb-1">Users</span>
                          <h3 class="card-title mb-2">@ViewBag.UserCount</h3>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                      <div class="card">
                        <div class="card-body">
                          <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                              <img
                                src="~/DashboardAssets/assets/img/icons/unicons/wallet-info.png"
                                alt="Credit Card"
                                class="rounded"
                              />
                            </div>
                            <div class="dropdown">
                              <button
                                class="btn p-0"
                                type="button"
                                id="cardOpt6"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                              >
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
                                <a class="dropdown-item" href="javascript:void(0);">View More</a>
                                <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                              </div>
                            </div>
                          </div>
                          <span>Violations</span>
                          <h3 class="card-title text-nowrap mb-1">@ViewBag.ViolationCount</h3>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Total Revenue -->
                <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
                  <div class="card px-4 py-4">
				<h3 class="card-title">Violations in cities</h3>
				<table class="table table-responsive text-nowrap">
					<thead>
						<tr>
							<th class="text-primary">City</th>

							<th class="text-primary">Violations</th>
							
							<th class="text-primary">Percentage</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var item in Model.Item2)
						{
							<tr>
								<td>@item.location</td>
								
								<td>@item.count</td>

								<td>@item.percentage %</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
                </div>

                <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
                  <div class="row">
                    <div class="col-6 mb-4">
                      <div class="card">
                        <div class="card-body">
                          <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                              <img src="~/DashboardAssets/assets/img/icons/unicons/paypal.png" alt="Credit Card" class="rounded" />
                            </div>
                            <div class="dropdown">
                              <button
                                class="btn p-0"
                                type="button"
                                id="cardOpt4"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                              >
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                                <a class="dropdown-item" href="javascript:void(0);">View More</a>
                                <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                              </div>
                            </div>
                          </div>
                          <span class="d-block mb-1">Total Fines</span>
                          <h3 class="card-title text-nowrap mb-2">@ViewBag.FineSum Jod</h3>
                        </div>
                      </div>
                    </div>
                    <div class="col-6 mb-4">
                      <div class="card">
                        <div class="card-body">
                          <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                              <img src="~/DashboardAssets/assets/img/icons/unicons/cc-primary.png" alt="Credit Card" class="rounded" />
                            </div>
                            <div class="dropdown">
                              <button
                                class="btn p-0"
                                type="button"
                                id="cardOpt1"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false"
                              >
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu" aria-labelledby="cardOpt1">
                                <a class="dropdown-item" href="javascript:void(0);">View More</a>
                                <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                              </div>
                            </div>
                          </div>
                          <span class="fw-semibold d-block mb-1">Fines Payed</span>
                          <h3 class="card-title mb-2">@ViewBag.PayedPer%</h3>
                        </div>
                      </div>
                    </div>
                    <!-- </div>
    <div class="row"> -->
                    <div class="col-12 mb-4">
                      <div class="card">
                        <div class="card-body">
                            <h2 class="card-title text-primary">Recent Testimonials</h2>
                          <table class="table table-responsive text-nowrap">
                            <thead class="">
                                <tr>
                                    <th class="text-primary">
                                        User
                                    </th>
                                    <th class="text-primary">
                                         Content
                                    </th>
            
                                </tr>
                            </thead>
                            <tbody>
                                @{int ind = 0;}
                                @foreach (var item in Model.Item3) 
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem =>  item.user.Fname) @Html.DisplayFor(modelItem =>  item.user.Fname)
                                        </td>
                                        <td>
                                            @Html.Raw(item.testimonial.Content.Length > 20 ? item.testimonial.Content.Substring(0, 20) : item.testimonial.Content)...
                                        </td>
                                    </tr>

                                    if (++ind == 3) break;
                                }  
                            </tbody>

                        </table>
                         <a asp-action="TestimonialManagement" class="btn btn-primary mt-3">More</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
             
            </div>
