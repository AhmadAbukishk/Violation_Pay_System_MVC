 @model Traffic_Violation.Models.ProjectUserLogin

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<hr />
<div class="row d-flex justify-content-center pt-5">y 
    <div class="col-md-6 card p-4">
        <h4>New Username</h4>
        <form asp-action="ChangeUsername"  class="mt-3" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Loginid" />
            <div class="form-group  mt-4">
                <label asp-for="Username">New username</label>
                <input asp-for="Username" type="text" class="form-control" />
            </div>

            <div class="form-group  mt-4">
                <input asp-for="Password" type="hidden" class="form-control" />
            </div>

            <div class="form-group  mt-4">
                <input asp-for="Userid" type="hidden" class="form-control" />
            </div>
            <div class="form-group  mt-4">
                <input asp-for="Roleid" type="hidden" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>




