 @model Traffic_Violation.Models.ProjectFactSection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<hr />
<div class="row d-flex justify-content-center pt-5">
    <div class="col-md-6 card p-4">
        <h3>Edit Fact Section</h3>
        <form asp-action="EditFact"  class="mt-3" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Factid" />
            <div class="form-group mt-4">
                <label asp-for="Title" class="control-label">Email</label>
                <input asp-for="Title" maxlength="150"  typeof="email" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Content" class="control-label">Phone</label>
                <input asp-for="Content" maxlength="300" typeof="tel" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>



