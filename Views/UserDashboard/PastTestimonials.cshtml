@model IEnumerable<Traffic_Violation.Models.TestimonialJoin>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body class="px-5 mt-5">
    <div class="row mt-3">
        <div class="text-center">
            <h1>Manage Testimonials</h1>
        </div>
    </div>

<table class="table table-responsive text-nowrap">
    <thead class="">
        <tr>
            <th class="text-primary">
                Date Added
            </th>
            <th class="text-primary">
                Content
            </th>
            <th class="text-primary">
                State
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem =>  item.testimonial.Dateadded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.testimonial.Content)
            </td>
            <td class="">
                @Html.DisplayFor(modelItem => item.testimonialState.Name) 
            </td>

        </tr>
}  
    </tbody>
</table>

    <div class="row d-flex justify-content-center">
        <div class=" col-2">
            <a asp-action="TestimonialManagement" class="btn btn-primary btn-lgm me-3" >Back</a>

        </div>
    </div>

</body>
</html>

