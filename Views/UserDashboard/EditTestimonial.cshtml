@model Traffic_Violation.Models.ProjectTestimonial
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="row d-flex justify-content-center pt-5 ">
    <div class="text-center">
        
    </div>  
     <hr />
    <div class="col-md-6 card p-4">
        <h3>Create Testimonial</h3>
        <form asp-action="EditTestimonial" class="mt-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-4">
                <label asp-for="Content" class="control-label">Testimonial</label>
                <textarea asp-for="Content" maxlength="250" row="3" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
           
            <input asp-for="Testimonialid" type="hidden"/>
            <input asp-for="Userid"  type="hidden"/>
            <input asp-for="Stateid" type="hidden"/>
            <input asp-for="Dateadded" type="hidden"/>



            
            <div class="form-group d-flex justify-content-center mt-5">
                <input type="submit" value="Edit" class="btn btn-primary btn-lg" />
                <a class="btn btn-primary btn-lg ms-3" asp-action="TestimonialManagement">Back</a>
            </div>
        </form>

        @Html.ValidationSummary()
    </div>
</div>





