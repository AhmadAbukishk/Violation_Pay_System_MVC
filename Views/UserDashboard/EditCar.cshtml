 @model Traffic_Violation.Models.ProjectCar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<hr />
<div class="row d-flex justify-content-center pt-5">
    <div class="col-md-6 card p-4">
        <h3>Edit Car</h3>
        <form asp-action="EditCar"  class="mt-3" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Carid" />
            <div class="form-group mt-4">
                <label asp-for="Brand" class="control-label">Brand</label>
                <input asp-for="Brand"  class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Model" class="control-label">Model</label>
                <input asp-for="Model"  class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Color" class="control-label">Color</label>
                <input asp-for="Color"  class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Platenumber" class="control-label">Color</label>
                <input asp-for="Platenumber"  class="form-control" />
                <span asp-validation-for="Platenumber" class="text-danger"></span>
            </div>
            <input asp-for="Userid" type="hidden" class="form-control" />
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary me-3" />
                <a asp-action="CarManagement" class="btn btn-primary btn-lg" >Back</a>
            </div>
        </form>
    </div>
</div>



